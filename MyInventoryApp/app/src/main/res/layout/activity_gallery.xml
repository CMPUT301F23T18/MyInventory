<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <TextView
        android:id="@+id/imageTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/6 Images"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/footer_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/footer_bg" />

        <Button
            android:id="@+id/saveButtonGallery"

            android:layout_marginTop="19dp"
            android:layout_marginEnd="4dp"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/footer" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/button"
            android:pointerIcon="arrow"
            app:icon="@drawable/back_arrow"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cameraButton"
            android:layout_width="85dp"
            android:layout_height="72dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/camera_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TableLayout
        android:id="@+id/gallery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_margin="30dp">

            <View
                android:id="@+id/image1Edit"
                android:layout_width="153dp"
                android:layout_height="124dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp" />

            <View
                android:id="@+id/image2Edit"
                android:layout_width="153dp"
                android:layout_height="124dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />
        </TableRow>

        <TableRow android:layout_margin="30dp">

            <View
                android:id="@+id/image3Edit"
                android:layout_width="153dp"
                android:layout_height="124dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp" />

            <View
                android:id="@+id/image4Edit"
                android:layout_width="153dp"
                android:layout_height="124dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />
        </TableRow>

        <TableRow android:layout_margin="30dp">

            <View
                android:id="@+id/image5Edit"
                android:layout_width="153dp"
                android:layout_height="124dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp" />

            <View
                android:id="@+id/image6Edit"
                android:layout_width="153dp"
                android:layout_height="124dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />
        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/footer_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_view"
            android:name="com.example.myinventoryapp.CameraFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

