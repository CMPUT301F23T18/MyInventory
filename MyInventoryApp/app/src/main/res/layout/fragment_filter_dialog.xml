<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_dark">

    <Button
        android:id="@+id/cancelFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/clear"
        app:icon="@drawable/cross" />

    <TextView
        android:id="@+id/makeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancelFilterButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Select Make:"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/makeDropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/makeLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Makes"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/tagsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/makeDropDown"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Select Tags:"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tagDropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagsLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Tags"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagDropDown"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Select Date Range:"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dateDropDown"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:hint="Date"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/cleardatebtn"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:layout_below="@id/dateLabel"
        android:layout_toRightOf="@id/dateDropDown"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="clear"
        android:textColor="#2196F3" />

    <Button
        android:id="@+id/applyFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateDropDown"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/clearFilterButton"
        android:text="Apply" />

    <Button
        android:id="@+id/clearFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateDropDown"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="Clear" />
</RelativeLayout>