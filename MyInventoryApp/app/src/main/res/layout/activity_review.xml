<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/logo_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/serialNumEdit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Serial Number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@id/acqDateEdit"
        android:layout_marginLeft="107dp"/>

    <EditText
        android:id="@+id/acqDateEdit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Acquired Date"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/makeEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintTop_toBottomOf="@+id/serialNumEdit"
        app:layout_constraintVertical_bias="0.541"
        android:layout_marginLeft="107dp"/>

    <EditText
        android:id="@+id/makeEdit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Make"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/estPriceEdit"
        app:layout_constraintTop_toBottomOf="@id/acqDateEdit"
        tools:layout_editor_absoluteY="278dp"
        android:layout_marginLeft="107dp"/>

    <EditText
        android:id="@+id/estPriceEdit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Estimated Price"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/descEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeEdit"
        app:layout_constraintVertical_bias="0.231"
        android:layout_marginLeft="107dp"/>


    <EditText
        android:id="@+id/descEdit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estPriceEdit"
        android:layout_marginLeft="107dp"
        tools:layout_editor_absoluteY="464dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/tag_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>
    <ImageView
        android:id="@+id/add_tag_button"
        android:layout_width="89dp"
        android:layout_height="67dp"
        android:layout_marginLeft="163dp"
        android:clickable="true"
        app:srcCompat="@drawable/add_tag" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="98dp">
        <ImageView
            android:id="@+id/back_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_grey"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"/>
        <View
            android:id="@+id/image1Edit"
            android:layout_width="153dp"
            android:layout_height="124dp"
            android:background="@drawable/house_placeholder"
            />
        <ImageView
            android:id="@+id/next_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/next_grey"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">


        <ImageView
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/footer" />

        <ImageView
            android:id="@+id/cameraButton"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:clickable="true"
            app:srcCompat="@drawable/camera_button"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/saveButton2"
            android:layout_width="124dp"
            android:layout_height="44dp"
            android:backgroundTint="#F37135"
            android:fontFamily="@font/inknut_antiqua"
            android:text="Edit"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="22dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="82dp"
            android:layout_height="71dp"
            android:backgroundTint="@color/white"
            android:pointerIcon="arrow"
            app:icon="@drawable/back_arrow"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="@color/black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="11dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
