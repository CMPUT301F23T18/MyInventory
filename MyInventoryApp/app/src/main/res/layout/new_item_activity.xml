<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_item_ac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:clipToOutline="true">


    <EditText
        android:id="@+id/serial_numb"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:digits="1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ-"
        android:gravity="center_vertical"
        android:hint="@string/serial_numb"
        android:inputType="textCapCharacters"
        android:textAppearance="@style/new_item_activity_text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/acquired_da"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/acquired_da"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:hint="@string/acquired_da"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:digits="1234567890-"
        android:maxLength="10"
        android:inputType="phone"
        android:textAppearance="@style/new_item_activity_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serial_numb" />

    <EditText
        android:id="@+id/make"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:hint="@string/make"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textAppearance="@style/new_item_activity_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/acquired_da" />


    <EditText
        android:id="@+id/estimated_p"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:hint="@string/estimated_p"
        android:inputType="numberDecimal"
        android:textAppearance="@style/new_item_activity_text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/model" />

    <EditText
        android:id="@+id/description"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:hint="@string/description"
        android:textAppearance="@style/new_item_activity_text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estimated_p" />


    <EditText
        android:id="@+id/comments"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:hint="Comments"
        android:textAppearance="@style/new_item_activity_text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/footer_bg" />

    <Button
        android:id="@+id/scanBarcodeAdd"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/scan_image"
        android:textAppearance="@style/scan_image"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comments" />

    <EditText
        android:id="@+id/model"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Model"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make" />

    <ImageView
        android:id="@+id/forwardButtonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/forward_arrow" />

    <ImageView
        android:id="@+id/backButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/forwardButtonAdd"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:srcCompat="@drawable/back_arrow" />

    <Button
        android:id="@+id/serialScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Scan Serial"
        app:layout_constraintStart_toEndOf="@+id/serial_numb"
        app:layout_constraintTop_toTopOf="@+id/serial_numb" />


</androidx.constraintlayout.widget.ConstraintLayout>