<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grey_dark">

    <TextView
        android:id="@+id/fieldLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Sorted by:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/fieldSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldLabel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"/>
    <Spinner
        android:id="@+id/orderSpinner"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldLabel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/cancelSortButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldSpinner"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/applySortButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderSpinner"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_toRightOf="@id/cancelSortButton"
        android:text="Apply" />

</RelativeLayout>